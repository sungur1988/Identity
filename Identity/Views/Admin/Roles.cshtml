@model List<AppRole>

@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Admin/AdminLayout.cshtml";
}

<h3>Roller</h3>
<hr />
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Rol Id</th>
            <th>Rol Adı</th>
            <th>Güncelleme</th>
            <th>Silme</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr >
                <td colspan="4">Hiçbir rol bulunamadı</td>
            </tr>
        }
        else
        {


            @foreach (var item in Model)
            {
    <tr>
        <td>@item.Id</td>
        <td>@item.Name</td>
        <td>
            <a class="btn btn-success" asp-action="RoleUpdate" asp-route-id="@item.Id">Güncelle</a>
        </td>
        <td>
            <a class="btn btn-danger" asp-action="RoleDelete" asp-route-id="@item.Id">Sil</a>
        </td>
    </tr>
            }
        }
    </tbody>
</table>
<a  asp-action="RoleCreate" class="btn btn-info">Rol Oluştur</a>

